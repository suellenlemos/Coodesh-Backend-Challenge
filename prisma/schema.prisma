generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

enum ProductStatus {
  DRAFT
  TRASH
  PUBLISHED

  @@map("product_status")
}

model Product {
  code             Int           @id @map("_id")
  status           ProductStatus @default(DRAFT)
  imported_t       DateTime
  url              String
  creator          String
  created_t        Int
  last_modified_t  Int
  product_name     String
  quantity         String
  brands           String
  categories       String
  labels           String
  cities           String
  purchase_places  String
  stores           String
  ingredients_text String
  traces           String
  serving_size     String
  serving_quantity Float
  nutriscore_score Int
  nutriscore_grade String
  main_category    String
  image_url        String

  @@map("products")
}
